@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Add Phone Number";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <h2 class="mdl-typography--display-1">@ViewData["Title"]</h2>
        <p>@ViewData["StatusMessage"]</p>
    </div>
    <div class="mdl-cell mdl-cell--5-col-desktop mdl-cell--8-col-tablet">
        <div class="mdl-card mdl-shadow--6dp">
            <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" role="form">
                <fieldset>
                    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                        <strong>Add a phone number</strong>
                    </div>
                    <div class="mdl-card__supporting-text">
                        <div asp-validation-summary="ValidationSummary.All" class="mdl-color-text--error"></div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input asp-for="PhoneNumber" class="mdl-textfield__input">
                            <label asp-for="PhoneNumber" class="mdl-textfield__label"></label>
                            <span asp-validation-for="PhoneNumber" class="mdl-textfield__error" />
                        </div>    
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                         <button type="submit" class="mdl-button mdl-button--raised mdl-js-button mdl-js-ripple-effect mdl-button--primary">Send verification code</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
